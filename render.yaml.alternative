# Alternative render.yaml for Preview Environments
services:
  - type: web
    name: rlec-website
    env: node
    repo: https://github.com/rONin01010101010/RLEC
    region: oregon
    plan: free
    # Note: No branch field - allows preview environments to work
    buildCommand: npm install && npm run build
    startCommand: npm start
    healthCheckPath: /
    autoDeployTrigger: checksPass
    envVars:
      - key: NODE_VERSION
        value: 18.17.0
